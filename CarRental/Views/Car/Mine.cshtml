@using CarRental.Models.Car
@model List<CarAllViewModel>

<body style="overflow-y: auto;overflow-x: hidden;">
<style>
    .btn.btn-primary.disabled.ms-2 {
        display: none;
    }

    .btn.btn-primary.disabled.me-2 {
        display: none;
    }

    .card-img-top {
        object-fit: cover;
        height: 312px;
    }
</style>

@if (!Model.Any())
{
	<h1 class="text-center" style="font-weight:800";>You don't have any cars yet!</h1>
}
else
{
	<div class="row m-0">
		@foreach (CarAllViewModel car in Model)
		{
			<partial name="_CarPartial" model="car" />
		}
	</div>
}

<link href="~/css/AllCars.css" rel="stylesheet" />
</body>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

