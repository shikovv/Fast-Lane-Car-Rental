@model CarRental.Models.Rental.RentalForm

<h2>Rent a Car</h2>

<form method="post">
    <input type="hidden" asp-for="CarId" />
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deposit">Deposit</label>
        <input asp-for="Deposit" class="form-control" />
        <span asp-validation-for="Deposit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Days">Days</label>
        <input asp-for="Days" class="form-control" />
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Rent</button>
</form>
