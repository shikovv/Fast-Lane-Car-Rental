@using CarRental.Models.Comment
@model CommentFormModel

<h2 style="margin-left:20px;">Add a Comment</h2>
<body>
    <link rel="stylesheet" href="~/css/comment.css">
    <form asp-action="Add" method="post" style="margin-left:20px;">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" class="form-control" rows="5" required></textarea>
        </div>
        <div class="form-group">
            <label for="rating">Rating:</label>
            <div class="rating">
                <input type="radio" name="StarsRating" id="star1" value="5" @(Model.StarsRating == 1 ? "checked" : null)><label for="star1"></label>
                <input type="radio" name="StarsRating" id="star2" value="4" @(Model.StarsRating == 2 ? "checked" : null)><label for="star2"></label>
                <input type="radio" name="StarsRating" id="star3" value="3" @(Model.StarsRating == 3 ? "checked" : null)><label for="star3"></label>
                <input type="radio" name="StarsRating" id="star4" value="2" @(Model.StarsRating == 4 ? "checked" : null)><label for="star4"></label>
                <input type="radio" name="StarsRating" id="star5" value="1" @(Model.StarsRating == 5 ? "checked" : null)><label for="star5"></label>
            </div>

        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Save" />
    </form>

</body>