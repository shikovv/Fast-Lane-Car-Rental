@using CarRental.Models.Comment
@model CommentFormModel

<body>
    <link rel="stylesheet" href="~/css/comment.css">
    <form asp-area="" method="post" style="margin-left:20px;margin-right:60rem;font-weight:700;">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" style="font-weight:600;" value="@Model.Title" required>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" class="form-control" rows="5" required style="font-weight:600;">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label for="rating">Rating:</label>
            <div class="rating">
                <input type="radio" name="StarsRating" id="star1" value="5" @(Model.StarsRating == 5 ? "checked" : "")><label for="star1"></label>
                <input type="radio" name="StarsRating" id="star2" value="4" @(Model.StarsRating == 4 ? "checked" : "")><label for="star2"></label>
                <input type="radio" name="StarsRating" id="star3" value="3" @(Model.StarsRating == 3 ? "checked" : "")><label for="star3"></label>
                <input type="radio" name="StarsRating" id="star4" value="2" @(Model.StarsRating == 2 ? "checked" : "")><label for="star4"></label>
                <input type="radio" name="StarsRating" id="star5" value="1" @(Model.StarsRating == 1 ? "checked" : "")><label for="star5"></label>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" style="border: 3px solid rgba(0, 0, 0, .125);color: #fff;background-color: #0d6efd;font-weight:600;" value="Save" />
    </form>
</body>

<style>
    ::-webkit-scrollbar {
        width: 12px;
    }

    ::-webkit-scrollbar-track {
        background: linear-gradient(#141e30, #243b55);
    }

    ::-webkit-scrollbar-thumb {
        background-color: #03e9f4;
        border-radius: 3px;
    }

</style>
