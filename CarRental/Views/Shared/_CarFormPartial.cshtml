@using CarRental.Models.Car
@model CarViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Car</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(#1f6bc0, #0b1c3f);
            color: #fff;
        }

        .form-label,
        .form-control::placeholder {
            color: #fff !important;
            font-weight: 600;
        }

        .btn.btn-primary.mt-3 {
            padding: 13px 55px;
            margin-bottom: 1.3em;
        }

        .form-select option {
            color: #fff;
            background-color: #0b1c3f;
        }

        .form-control {
            color: #000 !important;
        }

        .text-danger {
            color: #fff !important;
            font-weight: 600;
        }

        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: linear-gradient(#141e30, #243b55);
        }

        ::-webkit-scrollbar-thumb {
            background-color: #03e9f4;
            border-radius: 6px;
        }

    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6">
                <form asp-area="" method="post">
                    <div class="mb-3">
                        <label asp-for="Make" class="form-label">Make</label>
                        <input asp-for="Make" class="form-control text-white fw-bold" placeholder="Make" required>
                        <span asp-validation-for="Make" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label">Model</label>
                        <input asp-for="Model" class="form-control text-white fw-bold" placeholder="Model" required>
                        <span asp-validation-for="Model" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PricePerDay" class="form-label">Daily Price</label>
                        <input asp-for="PricePerDay" class="form-control text-white fw-bold" placeholder="Daily Price" required>
                        <span asp-validation-for="PricePerDay" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedBodyType" class="form-label">Body Type</label>
                        <select asp-for="SelectedBodyType" class="form-select text-white fw-bold" required style="color: #000 !important;">
                            @foreach (var bodyType in Model.BodyTypes)
                            {
                                <option value="@bodyType">@bodyType.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedBodyType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="YearOfProduction" class="form-label">Year</label>
                        <input asp-for="YearOfProduction" class="form-control text-white fw-bold" placeholder="Year" required>
                        <span asp-validation-for="YearOfProduction" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SafetyRating" class="form-label">Safety Rating</label>
                        <input asp-for="SafetyRating" class="form-control text-white fw-bold" placeholder="Safety Rating" required>
                        <span asp-validation-for="SafetyRating" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Seats" class="form-label">Passenger Seats</label>
                        <input asp-for="Seats" class="form-control text-white fw-bold" placeholder="Passenger Seats" required>
                        <span asp-validation-for="Seats" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedTransmissionType" class="form-label">Transmission</label>
                        <select asp-for="SelectedTransmissionType" class="form-select text-white fw-bold" required style="color: #000 !important;">
                            @foreach (var transmission in Model.TransmissionTypes)
                            {
                                <option value="@transmission">@transmission.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedTransmissionType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedEngineStructureType" class="form-label">Engine Structure Type</label>
                        <select asp-for="SelectedEngineStructureType" class="form-select text-white fw-bold" required style="color: #000 !important;">
                            @foreach (var structure in Model.EngineStructureTypes)
                            {
                                <option value="@structure">@structure.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedEngineStructureType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CylindersNumber" class="form-label">Cylinders</label>
                        <input asp-for="CylindersNumber" class="form-control text-white fw-bold" placeholder="Cylinders" required>
                        <span asp-validation-for="CylindersNumber" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedEngineAspirationType" class="form-label">Engine Aspiration</label>
                        <select asp-for="SelectedEngineAspirationType" class="form-select text-white fw-bold" required style="color: #000 !important;">
                            @foreach (var aspiration in Model.EngineAspirationTypes)
                            {
                                <option value="@aspiration">@aspiration.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedEngineAspirationType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedFuelType" class="form-label">Fuel Type</label>
                        <select asp-for="SelectedFuelType" class="form-select text-white fw-bold" required style="color: #000 !important;">
                            @foreach (var fuel in Model.EngineFuelTypes)
                            {
                                <option value="@fuel">@fuel.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedFuelType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Displacement" class="form-label">Displacement</label>
                        <input asp-for="Displacement" class="form-control text-white fw-bold" placeholder="Displacement" required>
                        <span asp-validation-for="Displacement" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Horsepower" class="form-label">Horsepower</label>
                        <input asp-for="Horsepower" class="form-control text-white fw-bold" placeholder="Horsepower" required>
                        <span asp-validation-for="Horsepower" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PeakHorsepowerAtRPM" class="form-label">Peak Horsepower At RPM</label>
                        <input asp-for="PeakHorsepowerAtRPM" class="form-control text-white fw-bold" placeholder="Peak Horsepower At RPM" required>
                        <span asp-validation-for="PeakHorsepowerAtRPM" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Torque" class="form-label">Torque</label>
                        <input asp-for="Torque" class="form-control text-white fw-bold" placeholder="Torque" required>
                        <span asp-validation-for="Torque" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PeakTorqueAtRPM" class="form-label">Peak Torque At RPM</label>
                        <input asp-for="PeakTorqueAtRPM" class="form-control text-white fw-bold" placeholder="Peak Torque At RPM" required>
                        <span asp-validation-for="PeakTorqueAtRPM" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AccelerationTo100" class="form-label">Acceleration(0-100)</label>
                        <input asp-for="AccelerationTo100" class="form-control text-white fw-bold" placeholder="Acceleration" required>
                        <span asp-validation-for="AccelerationTo100" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TopSpeed" class="form-label">Top Speed</label>
                        <input asp-for="TopSpeed" class="form-control text-white fw-bold" placeholder="Top Speed" required>
                        <span asp-validation-for="TopSpeed" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Mileage" class="form-label">Mileage</label>
                        <input asp-for="Mileage" class="form-control text-white fw-bold" placeholder="Mileage" required>
                        <span asp-validation-for="Mileage" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImageURL" class="form-label">Image URL</label>
                        <input asp-for="ImageURL" class="form-control text-white fw-bold" placeholder="Image URL" required>
                        <span asp-validation-for="ImageURL" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConsumptionPer100Km" class="form-label">Consumption Per 100 Km</label>
                        <input asp-for="ConsumptionPer100Km" class="form-control text-white fw-bold" placeholder="Consumption Per 100 Km" required>
                        <span asp-validation-for="ConsumptionPer100Km" class="text-danger small"></span>
                    </div>
                    <div class="text-center">
                        <input class="btn btn-primary mt-3" type="submit" value="Save" style="margin:1rem;font-weight: 800; font-size: 20px;padding: 10px 20px;background:#1f6bc0;color:white;border: 3px solid rgba(0, 0, 0, .125);" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
