@using CarRental.Models.Comment
@model AllCommentViewModel
<body style="overflow-y: auto;">
    <style>
        .btn.btn-primary.disabled.ms-2 {
            display: none;
        }

        .btn.btn-primary.disabled.me-2 {
            display: none;
        }

        .card-img-top {
            object-fit: cover;
            height: 312px;
        }
    </style>
 
    @if (!Model.Comments.Any())
    {
        <h2 class="text-center">No comments found by the given criteria!</h2>
    }

    <div class="blog-posts">
        <div class="container">
            <div class="sidebar-item comments">
                <div class="content">
                    <ul>
                        @foreach (var house in Model.Comments)
                        {
                            <li style="display: flex; align-items: center;">
                                <div class="right-content" style="margin-left: 10px;">
                                    <h4>@house.Title<span style="font-size:12px; color:darkgrey;margin-left:30px;">@house.CreatedOn</span></h4>
                                    <p>@house.Description</p>
                                        @for (int i = 0; i < house.StarsRating; i++)
                                        {
                                        <i class="fa-solid fa-star" style="color: yellow"></i>
                                        }                   
                                    <h5 style="text-align:right">-@house.CreaterFullName</h5>
                                </div>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>